{{#if achievements}}
    {{#each achievements}}
<div class="box achievement clickable" data-achievement-id="{{id}}">
            <article class="media">
                <div class="media-left">
                    {{#if image}}
                    <figure class="image is-64x64">
                        <img src="{{image}}" alt="Image">
                    </figure>
                    {{/if}}
                </div>
                <div class="media-content">
                    <div class="content">
                        <p>
                            <strong><a href="#marken/{{id}}" aria-current="page">{{name}}</a></strong>
                            <br>
                            {{#each tags}}
                                <span class="tag is-light">{{.}}</span>
                            {{/each}}
                        </p>
                    </div>
                </div>
            </article>
        </div>
    {{/each}}
{{else}}
<p>Tyv√§rr, vi hittade inget som passade.</p>
{{/if}}
