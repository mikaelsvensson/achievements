<section class="section">
    <div class="container">
        <h1 class="title">
            Person {{name}}
        </h1>

        {{> ../_breadcrumbs.handlebars}}

        <div class="columns">
            <div class="column">
                <form>
                    <div class="field">
                        <label class="label">Namn</label>
                        <div class="control">
                            <input class="input" type="text" id="name" name="name"/>
                        </div>
                    </div>

                    <div class="field">
                        <label class="label">E-postadress</label>
                        <div class="control">
                            <input class="input" type="email" id="email" name="email"/>
                        </div>
                    </div>

                    <div class="field">
                        <label class="label">Egen identifierare</label>
                        <div class="control">
                            <input class="input" type="email" id="custom_identifier" name="custom_identifier"/>
                        </div>
                        <p class="help">Något som identifierar personen. Exempelvis medlemsnummer, personnummer,
                            e-postadress eller telefonnummer. Det här värdet måste inte anges men om det anges så måste
                            det vara unikt.</p>
                    </div>
                    <div class="field">
                        <label class="label">Egna attribut</label>
                        <p class="help">Här kan du fylla i data som är viktiga för er men som egentligen har inte så
                            mycket med märken att göra. Kan exempelvis användas för att kunna söka efter personer
                            baserat på något annat än namn.</p>
                    </div>

                    <div id="person-attributes-list"></div>

                    <br>

                    <div class="field">
                        <div class="control">
                            <button class="button is-primary" type="button" id="person-save-button">Spara</button>
                            <button class="button is-primary is-outlined" type="button">Ta bort</button>
                        </div>
                    </div>

                    <div class="errors"/>

                </form>

                <h2 class="subtitle">Inloggning</h2>

                <p>
                    <small>I framtiden kommer du här se på vilka sätt personen kan logga in.</small>
                </p>
            </div>
            <div class="column">
                <div class="box">
                    <h2 class="subtitle">Märken</h2>
                    <div id="achievements-summary"></div>
                </div>
            </div>
        </div>
    </div>
</section>
{{> ../_footer.handlebars}}