<section class="section">
    <div class="container">
        <h1 class="title">
            Kår <strong>{{name}}</strong>
        </h1>

        {{> ../_breadcrumbs.handlebars}}

        <div class="tile is-ancestor">
            <div class="tile is-parent is-6">
                <div class="tile is-child box">
                    <h2 class="subtitle">Sammanfattning av märken</h2>
                    <div id="achievements-summary"></div>
                    <br>
                    <p>
                        <a href="#karer/{{orgId}}/marken">Vem har gjort vad?</a>
                    </p>
                </div>
            </div>
            <div class="tile is-parent is-6">
                <div class="tile is-child box">
                    <h2 class="subtitle">Bjud in användare</h2>
                    <p>Ge den här länken till de som du vill ska ha tillgång till din kår:</p>
                    <p><a href="{{invite_link}}" target="_blank">{{invite_link}}</a></p>
                </div>
            </div>
        </div>
        <div class="tile is-ancestor">
            <div class="tile is-parent is-6">
                <div class="tile is-child notification">
                    <h2 class="subtitle">Patruller</h2>

                    <div id="organization-groups-list"></div>

                    <form>
                        <div class="field has-addons">
                            <div class="control">
                                <input class="input" type="text" name="name" placeholder="Namn"/></div>
                            <div class="control">
                                <a class="button is-info create-group-button">
                                    Lägg till
                                </a>
                            </div>
                        </div>
                    </form>

                </div>
            </div>
