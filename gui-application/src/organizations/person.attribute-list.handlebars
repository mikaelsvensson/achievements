    <div class="field-body">
        <div class="field has-addons">
            <p class="control">
                <input class="input" type="text" name="attributes.{{@index}}.key" value="{{key}}"
                       placeholder="Attributnamn">
            </p>
            <p class="control">
                <input class="input" type="text" name="attributes.{{@index}}.value"
                       value="{{value}}" placeholder="VÃ¤rde">
            </p>
